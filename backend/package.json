{
  "name": "saas-platform-backend",
  "version": "1.0.0",
  "description": "Multi-tenant SaaS platform backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node database/migrations/runMigrations.js",
    "seed": "node database/seeds/seedDatabase.js",
    "db:check": "node -e \"require('pg').connect('postgresql://saas_user:saas_password_secure@database:5432/saas_platform', (err) => process.exit(err ? 1 : 0))\"",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "saas",
    "multi-tenant",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.9.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  }
}
